.skill {
  position: relative;
  width: 166px;
  height: 166px;
  @include desktop {
    width: 135px;
    height: 135px;
  }
}

.skill__circle {
  fill: transparent;

  &--layer--under {
    stroke: rgba(233,233,233, .1);
    stroke-width: 5px;
  }

  &--layer--above {
    stroke-width: 12px;
    stroke-dasharray: 251;
    stroke-dashoffset: 120;
  }
}

.skill__title {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}