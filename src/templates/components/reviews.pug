script(type="text/x-template")#reviews-container
  .reviews
    .reviews__header
      .reviews__title.section-title Что обо мне говорят
      .reviews__buttons
        button(type="button" @click="slide('prev')").reviews__btn.reviews__btn--left
          +icon("arrow-down", "reviews__arrow")
        button(type="button" @click="slide('next')").reviews__btn.reviews__btn--right
          +icon("arrow-down", "reviews__arrow")
    swiper(ref="slider" :options="sliderOptions")
      swiper-slide(v-for="review in reviews" :key="review.id")
        .quote
          .quote__content
            +icon("quote", "quote__icon")
            .quote__text
              p {{review.text}}
          .quote__user
            .user-min
              .user-min__avatar
                .user-min__avatar-style
                  img(:src="`https://webdev-api.loftschool.com/${review.photo}`").user-min__pic
              .user-min__data    
                .user-min__name {{review.author}}
                .user-min__text {{review.occ}}